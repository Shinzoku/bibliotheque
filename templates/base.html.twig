<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block menu %}
        {% if is_granted('ROLE_ADMIN') %}
        <nav>
            <div>
                <a href="{{ path('app_front_livre') }}">Accueil</a>
            </div>
            <div>
                <a href="{{ path('app_auteur_index') }}">Auteurs</a>
            </div>
            <div>
                <a href="{{ path('app_emprunt_index') }}">Emprunts</a>
            </div>
            <div>
                <a href="{{ path('app_emprunteur_index') }}">Emprunteurs</a>
            </div>
            <div>
                <a href="{{ path('app_emprunteur_index') }}">Genres</a>
            </div>
            <div>
                <a href="{{ path('app_livre_index') }}">Livres</a>
            </div>
            <div>
                <a href="{{ path('app_user_index') }}">Users</a>
            </div>
            <div>
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        </nav>
        {% elseif is_granted('ROLE_EMPRUNTEUR') %}
        <nav>
            <div>
                <a href="{{ path('app_front_livre') }}">Accueil</a>
            </div>
            <div>
                <a href="{{ path('app_emprunt_index') }}">Mes emprunts</a>
            </div>
            <div>
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        </nav>
        {% else %}
        <nav>
            <div>
                <a href="{{ path('app_front_livre') }}">Accueil</a>
            </div>
            <div>
                <a href="{{ path('app_login') }}">Login</a>
            </div>
        </nav>
        {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
