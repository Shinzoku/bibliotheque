<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% block menu %}
        {% if is_granted('ROLE_ADMIN') %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid row justify-content-around">
            <div class="col">
                <a href="{{ path('app_front_livre') }}" class="text-decoration-none text-dark">Accueil</a>
            </div>
            <div class="col">
                <a href="{{ path('app_auteur_index') }}" class="text-decoration-none text-dark">Auteurs</a>
            </div>
            <div class="col">
                <a href="{{ path('app_emprunt_index') }}" class="text-decoration-none text-dark">Emprunts</a>
            </div>
            <div class="col">
                <a href="{{ path('app_emprunteur_index') }}" class="text-decoration-none text-dark">Emprunteurs</a>
            </div>
            <div class="col">
                <a href="{{ path('app_emprunteur_index') }}" class="text-decoration-none text-dark">Genres</a>
            </div>
            <div class="col">
                <a href="{{ path('app_livre_index') }}" class="text-decoration-none text-dark">Livres</a>
            </div>
            <div class="col">
                <a href="{{ path('app_user_index') }}" class="text-decoration-none text-dark">Users</a>
            </div>
            <div class="col text-end">
                <a href="{{ path('app_logout') }}" class="text-decoration-none btn btn-outline-dark">Logout</a>
            </div>
        </nav>
        {% elseif is_granted('ROLE_EMPRUNTEUR') %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid row">
            <div class="col">
                <a href="{{ path('app_front_livre') }}" class="text-decoration-none text-dark">Accueil</a>
            </div>
            <div class="col">
                <a href="{{ path('app_emprunt_index') }}" class="text-decoration-none text-dark">Mes emprunts</a>
            </div>
            <div class="col text-end">
                <a href="{{ path('app_logout') }}" class="text-decoration-none text-dark btn btn-outline-dark">Logout</a>
            </div>
        </nav>
        {% else %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid d-flex justify-content-around">
            <div class="col">
                <a href="{{ path('app_front_livre') }}" class="text-decoration-none text-dark">Accueil</a>
            </div>
            <div class="col text-end">
                <a href="{{ path('app_login') }}" class="text-decoration-none btn btn-outline-success">Login</a>
            </div>
        </nav>
        {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
